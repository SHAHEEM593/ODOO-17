<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    form-->
    <record id="events_form_view" model="ir.ui.view">
        <field name="name">events form view</field>
        <field name="model">events</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="university_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="events_tree_view" model="ir.ui.view">
        <field name="name">events.tree.view</field>
        <field name="model">events</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>